<div class="col-md-6 offset-md-3">

    <div class="card card-sm" style="height: 572px;">
        <div class="card-header mb-0">
            <h4>Contactos</h4>
        </div>
        
        <div class="card-body card-body-sm">
           <form action="/new-contact" method="POST">
                <div class="form-group form-group-sm">
                    <input type="text" name="firstname" placeholder="Nombre" class="form-control" autofocus required>
                </div>
                <div class="form-group orm-group-sm">
                    <input type="text" name="lastname" placeholder="Apellido" class="form-control">
                </div>
                <div class="form-group orm-group-sm">
                    <input type="email" name="email" placeholder="Email" class="form-control" required>
                </div>
                <div class="form-group orm-group-sm">
                    <input type="number" name="phone" placeholder="Telefono" class="form-control" required>
                </div>
                <button class="btn btn-warning btn-block">
                    Agregar
                </button>
            </form>
        </div>
        
        <div class="card-footer pt-2" style="height: 180px;">
            
             {{#if contacts}}
            <ul class="list-group" style="height: 170px;max-height: 170px;overflow-y: auto;">
                {{#each contacts}}
                <li class="list-group-item d-flex justify-content-between align-items-center p-1 m-1" style="height: 55px;">
                    {{firstname}}
                    {{lastname}} / 
                    {{email}} / 
                    {{phone}} 
                    <a href="/delete-contact/{{@key}}" class="btn btn-danger btn-sm">Eliminar</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
                <p>No hay contactos.</p>
            {{/if}}
        </div>
    </div>
</div>


